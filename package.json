    "chai": "^5.1.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-promise": "^7.2.1",
    "fantasticon": "^3.0.0",
