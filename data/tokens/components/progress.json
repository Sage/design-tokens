{
  "progress": {
    "none": {
      "$type": "color",
      "$value": "{mode.color.none}",
      "$description": "transparent override used for hiding colors when needed."
    },
    "bg-default": {
      "$type": "color",
      "$value": "{mode.color.generic.bg.delicate}"
    },
    "border-default": {
      "$type": "color",
      "$value": "{mode.color.generic.fg.firm}"
    },
    "fg-alt": {
      "$type": "color",
      "$value": "{mode.color.status.positive.default}"
    },
    "fg-alt2": {
      "$type": "color",
      "$value": "{mode.color.generic.txt.soft}"
    },
    "fg-caution": {
      "$type": "color",
      "$value": "{mode.color.status.warning.default}"
    },
    "fg-default": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.active}"
    },
    "fg-error": {
      "$type": "color",
      "$value": "{mode.color.status.negative.default}"
    },
    "fg-info": {
      "$type": "color",
      "$value": "{mode.color.status.info.default}"
    },
    "label-alt": {
      "$type": "color",
      "$value": "{mode.color.generic.txt.moderate}"
    },
    "label-default": {
      "$type": "color",
      "$value": "{mode.color.generic.txt.severe}"
    },
    "dataviz": {
      "fg-default": {
        "$type": "color",
        "$value": "{mode.color.status.custom.teal.default}"
      }
    },
    "inverse": {
      "label-alt": {
        "$type": "color",
        "$value": "{mode.color.generic.txt.inverse.soft}"
      }
    },
    "loader": {
      "bg-default": {
        "$type": "color",
        "$value": "{mode.color.generic.bg.delicate}"
      },
      "bg-skeleton": {
        "$type": "color",
        "$value": "linear-gradient(135deg, {mode.color.status.skeleton.stop-1} 15%, {mode.color.status.skeleton.stop-2} 85%)"
      },
      "fg-default": {
        "$type": "color",
        "$value": "{mode.color.generic.fg.extreme}",
        "$description": "used for loader standard loader spinner"
      },
      "fg-ai": {
        "$type": "color",
        "$value": "{mode.color.status.ai.default-horizontal}",
        "$description": "Loader ring or bar"
      },
      "fg-error": {
        "$type": "color",
        "$value": "{mode.color.status.negative.default}"
      },
      "fg-complete": {
        "$type": "color",
        "$value": "{mode.color.status.positive.default}"
      },
      "inverse": {
        "bg-default": {
          "$type": "color",
          "$value": "{mode.color.generic.bg.inverse.delicate}",
          "$description": "used for inverse loader bgs"
        },
        "fg-default": {
          "$type": "color",
          "$value": "{mode.color.generic.fg.inverse.extreme}",
          "$description": "used on inverse loading spinner"
        },
        "fg-ai": {
          "$type": "color",
          "$value": "{mode.color.status.ai.inverse.default-horizontal}",
          "$description": "Loader ring or bar"
        }
      }
    },
    "stepflow": {
      "bg-active": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.active}"
      },
      "bg-complete": {
        "$type": "color",
        "$value": "{mode.color.status.positive.default}"
      },
      "bg-default": {
        "$type": "color",
        "$value": "{mode.color.generic.fg.nought}"
      },
      "border-active-inner": {
        "$type": "color",
        "$value": "{mode.color.generic.fg.nought}"
      },
      "border-active-outer": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.active}"
      },
      "border-default": {
        "$type": "color",
        "$value": "{mode.color.generic.fg.firm}"
      },
      "label-alt": {
        "$type": "color",
        "$value": "{mode.color.generic.txt.soft}"
      },
      "label-default": {
        "$type": "color",
        "$value": "{mode.color.generic.txt.severe}"
      }
    },
    "stepindicator": {
      "bg-active": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.active}"
      },
      "bg-complete": {
        "$type": "color",
        "$value": "{mode.color.status.positive.default}"
      },
      "border-active-outer": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.active}"
      },
      "border-default": {
        "$type": "color",
        "$value": "{mode.color.generic.fg.firm}"
      },
      "border-success": {
        "$type": "color",
        "$value": "{mode.color.status.positive.default}"
      },
      "label-active": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.withActive}"
      },
      "label-complete": {
        "$type": "color",
        "$value": "{mode.color.action.grayscale.withActive}"
      },
      "label-default": {
        "$type": "color",
        "$value": "{mode.color.generic.txt.severe}"
      }
    }
  }
}