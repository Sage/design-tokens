{
  "tab": {
    "size": {
      "M": {
        "$type": "sizing",
        "$value": "{global.size.macro.M}",
        "$description": "Anchor nav, M Tab"
      },
      "L": {
        "$type": "sizing",
        "$value": "{global.size.macro.L}",
        "$description": "L tab"
      },
      "shadow": {
        "arrow": {
          "$type": "sizing",
          "$value": "{global.size.micro.M}",
          "$description": "Shadow width for linear gradient shadow on repsonsive tab arrows."
        }
      },
      "baseline": {
        "M": {
          "$type": "sizing",
          "$value": "{global.size.micro.XXS}",
          "$description": "Thickness of baseline."
        },
        "L": {
          "$type": "sizing",
          "$value": "{global.size.micro.XXS}",
          "$description": "Thickness of baseline."
        }
      },
      "icon": {
        "M": {
          "$type": "sizing",
          "$value": "{global.size.icon.M}"
        },
        "L": {
          "$type": "sizing",
          "$value": "{global.size.icon.M}"
        }
      },
      "indicator": {
        "M": {
          "$type": "sizing",
          "$value": "{global.size.micro.XS}",
          "$description": "Thickness of indicator for active and hover."
        },
        "L": {
          "$type": "sizing",
          "$value": "{global.size.micro.XS}",
          "$description": "Thickness of indicator for active and hover."
        }
      }
    },
    "color": {
      "bg-active": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.withActive}"
      },
      "bg-default": {
        "$type": "color",
        "$value": "{modes.color.none}"
      },
      "bg-hover": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.hoverAlt}",
        "$description": "For anchor nav, not tab."
      },
      "border-activealt": {
        "$type": "color",
        "$value": "{modes.color.generic.fg.delicate}"
      },
      "border-active": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.active}"
      },
      "border-default": {
        "$type": "color",
        "$value": "{modes.color.generic.fg.delicate}"
      },
      "border-hover": {
        "$type": "color",
        "$value": "{modes.color.generic.fg.moderate}"
      },
      "icon-default": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.defaultAlt}"
      },
      "icon-hover": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.withHover}"
      },
      "label-active": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.active}"
      },
      "icon-active": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.active}"
      },
      "label-default": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.default}"
      },
      "label-hover": {
        "$type": "color",
        "$value": "{modes.color.interactive.monochrome.withHover}"
      },
      "navigation": {
        "bg-default": {
          "$type": "color",
          "$value": "{modes.color.generic.bg.nought}",
          "$description": "For previous/next buttons on responsive tabs"
        }
      },
      "validation": {
        "border-warning": {
          "$type": "color",
          "$value": "{modes.color.status.caution.default}"
        },
        "border-error": {
          "$type": "color",
          "$value": "{modes.color.status.negative.default}"
        },
        "icon-error": {
          "$type": "color",
          "$value": "{modes.color.status.negative.default}"
        },
        "icon-warning": {
          "$type": "color",
          "$value": "{modes.color.status.caution.default}"
        },
        "label-error": {
          "$type": "color",
          "$value": "{modes.color.interactive.monochrome.defaultAlt}"
        },
        "label-warning": {
          "$type": "color",
          "$value": "{modes.color.interactive.monochrome.defaultAlt}"
        }
      }
    }
  }
}