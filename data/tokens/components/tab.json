{
  "tab": {
    "bg-active": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.withActive}"
    },
    "bg-default": {
      "$type": "color",
      "$value": "{mode.color.none}"
    },
    "bg-hover": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.hoverAlt}",
      "$description": "For anchor nav, not tab."
    },
    "border-activevAlt": {
      "$type": "color",
      "$value": "{mode.color.generic.fg.moderate}"
    },
    "border-activev": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.active}"
    },
    "border-default": {
      "$type": "color",
      "$value": "{mode.color.generic.fg.moderate}"
    },
    "border-hover": {
      "$type": "color",
      "$value": "{mode.color.generic.fg.firm}"
    },
    "icon-default": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.defaultAlt}"
    },
    "icon-hover": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.withHover}"
    },
    "label-activev": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.active}"
    },
    "icon-activev": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.active}"
    },
    "label-default": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.default}"
    },
    "label-hover": {
      "$type": "color",
      "$value": "{mode.color.action.gryscl.withHover}"
    },
    "nav": {
      "bg-default": {
        "$type": "color",
        "$value": "{mode.color.generic.bg.nought}",
        "$description": "For previous/next buttons on responsive tabs"
      }
    },
    "validation": {
      "border-warning": {
        "$type": "color",
        "$value": "{mode.color.status.warning.default}"
      },
      "border-error": {
        "$type": "color",
        "$value": "{mode.color.status.negative.default}"
      },
      "icon-error": {
        "$type": "color",
        "$value": "{mode.color.status.negative.default}"
      },
      "icon-warning": {
        "$type": "color",
        "$value": "{mode.color.status.warning.default}"
      },
      "label-error": {
        "$type": "color",
        "$value": "{mode.color.status.negative.default}"
      },
      "label-warning": {
        "$type": "color",
        "$value": "{mode.color.status.warning.txt}"
      }
    }
  }
}