{
  "focus": {
    "color": {
      "bg": {
        "$type": "color",
        "$value": "{modes.color.interactive.focus.withDefaultAlt}"
      },
      "borderalt": {
        "$type": "color",
        "$value": "{modes.color.interactive.focus.default}"
      },
      "border": {
        "$type": "color",
        "$value": "{modes.color.interactive.focus.withDefault}"
      },
      "label": {
        "$type": "color",
        "$value": "{modes.color.interactive.focus.content}"
      },
      "inverse": {
        "bg": {
          "$type": "color",
          "$value": "{modes.color.interactive.focus.inverse.withDefaultAlt}"
        },
        "borderalt": {
          "$type": "color",
          "$value": "{modes.color.interactive.focus.inverse.default}"
        },
        "border": {
          "$type": "color",
          "$value": "{modes.color.interactive.focus.inverse.withDefault}"
        },
        "label": {
          "$type": "color",
          "$value": "{modes.color.interactive.focus.inverse.content}"
        }
      }
    },
    "size": {
      "underline": {
        "$type": "sizing",
        "$value": "{global.size.micro.XS}",
        "$description": "focus black underline on links and skiplink"
      }
    },
    "borderwidth": {
      "secondary": {
        "$type": "borderWidth",
        "$value": "{global.borderwidth.S}",
        "$description": "Secondary focus (dropdown item)"
      },
      "inner": {
        "$type": "borderWidth",
        "$value": "{global.borderwidth.S}",
        "$description": "Focus border (inner)"
      },
      "outer": {
        "$type": "borderWidth",
        "$value": "{global.borderwidth.L}",
        "$description": "Focus border (outer)"
      }
    }
  }
}