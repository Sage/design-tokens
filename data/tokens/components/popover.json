{
  "popover": {
    "size": {
      "menu": {
        "minwidth": {
          "S": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.M} / 2",
            "$description": "minwidth of small size popover menu container"
          },
          "M": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.XS}",
            "$description": "minwidth of medium size popover menu container"
          },
          "L": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.S}",
            "$description": "minwidth of large size popover menu container"
          }
        },
        "maxwidth": {
          "S": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.M}",
            "$description": "maxwidth of small size popover menu container"
          },
          "M": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.L}",
            "$description": "maxwidth of medium size popover menu container"
          },
          "L": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.XL}",
            "$description": "maxwidth of large size popover menu container"
          }
        }
      }
    },
    "bg-active": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.active}",
      "$description": "previously action minor 850"
    },
    "bg-activeAlt": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.hoverAlt}",
      "$description": "REF'D IN FORM. "
    },
    "bg-default": {
      "$type": "color",
      "$value": "{mode.color.generic.bg.nought}",
      "$description": "REF'D IN FORM. Popover container bg"
    },
    "bg-hover": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.hoverAlt}",
      "$description": "REF'D IN FORM. "
    },
    "label-active": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.withActive}"
    },
    "label-activeAlt": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.withHover}"
    },
    "label-disabled": {
      "$type": "color",
      "$value": "{mode.color.action.inactive.txt}"
    },
    "label-hover": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.withHover}"
    },
    "label-default": {
      "$type": "color",
      "$value": "{mode.color.action.grayscale.defaultAlt}"
    },
    "submenu": {
      "bg-default": {
        "$type": "color",
        "$value": "{mode.color.generic.bg.faint}",
        "$description": "popover small screen submenu container bg"
      }
    }
  }
}