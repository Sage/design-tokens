      "$type": "color",
      "$value": "{modes.color.action.gryscl.hovAlt}",
      "$description": "REF'D IN FORM. "
    },
    "label-actv": {
      "$type": "color",
      "$value": "{modes.color.action.gryscl.withActv}"
    },
    "label-actvAlt": {
      "$type": "color",
      "$value": "{modes.color.action.gryscl.withhov}"
    },
    "label-disabled": {
      "$type": "color",
      "$value": "{modes.color.action.inactv.txt}"
    },
    "label-hov": {
      "$type": "color",
      "$value": "{modes.color.action.gryscl.withhov}"
    },
    "label-default": {
      "$type": "color",
      "$value": "{modes.color.action.gryscl.defaultAlt}"
