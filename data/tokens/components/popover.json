{
  "popover": {
    "size": {
      "menu": {
        "minwidth": {
          "S": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.M} / 2",
            "$description": "minwidth of small size popover menu container"
          },
          "M": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.XS}",
            "$description": "minwidth of medium size popover menu container"
          },
          "L": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.S}",
            "$description": "minwidth of large size popover menu container"
          }
        },
        "maxwidth": {
          "S": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.M}",
            "$description": "maxwidth of small size popover menu container"
          },
          "M": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.L}",
            "$description": "maxwidth of medium size popover menu container"
          },
          "L": {
            "$type": "sizing",
            "$value": "{container.size.fluidItems.XL}",
            "$description": "maxwidth of large size popover menu container"
          }
        }
      }
    },
    "bg-actv": {
      "$type": "color",
      "$value": "{modes.color.action.gryscl.actv}",
      "$description": "previously action minor 850"
