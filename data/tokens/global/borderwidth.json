{
  "global": {
    "borderwidth": {
      "scale": {
        "$type": "borderWidth",
        "$value": "1"
      },
      "none": {
        "$type": "borderWidth",
        "$value": "0"
      },
      "XS": {
        "$type": "borderWidth",
        "$value": "{core.dimension.12} * {global.borderwidth.scale}",
        "$description": "Buttons, Inputs. Dividing lines and container borders."
      },
      "S": {
        "$type": "borderWidth",
        "$value": "{core.dimension.25} * {global.borderwidth.scale}",
        "$description": "Buttons. Step flow, Validation bars"
      },
      "M": {
        "$type": "borderWidth",
        "$value": "{core.dimension.38} * {global.borderwidth.scale}",
        "$description": "Focus "
      },
      "L": {
        "$type": "borderWidth",
        "$value": "{core.dimension.50} * {global.borderwidth.scale}",
        "$description": "Focus underline. Dividing lines. "
      },
      "XL": {
        "$type": "borderWidth",
        "$value": "{core.dimension.75} * {global.borderwidth.scale}",
        "$description": "Double Focus Border"
      },
      "XXL": {
        "$type": "borderWidth",
        "$value": "{core.dimension.100} * {global.borderwidth.scale}"
      }
    }
  }
