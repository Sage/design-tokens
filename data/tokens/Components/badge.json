{
  "badge": {
    "color": {
      "inverse": {
        "warning": {
          "border-default": {
            "value": "{base.color.status.content.inverse.withDefault}",
            "type": "color"
          },
          "bg-default": {
            "value": "{base.color.status.caution.inverse.default}",
            "type": "color"
          },
          "label-default": {
            "value": "{base.color.status.content.inverse.withDefault}",
            "type": "color"
          }
        }
      },
      "standard": {
        "warning": {
          "border-default": {
            "value": "{base.color.status.content.standard.withDefault}",
            "type": "color"
          },
          "bg-default": {
            "value": "{base.color.status.caution.standard.default}",
            "type": "color"
          },
          "label-default": {
            "value": "{base.color.status.content.standard.withDefault}",
            "type": "color"
          }
        }
      }
    },
    "size": {
      "S": {
        "value": "{global.size.decorative.M}",
        "type": "sizing",
        "description": "Micro dot badge size"
      },
      "M": {
        "value": "{global.size.component.XS}",
        "type": "sizing",
        "description": "standard badge size"
      },
      "L": {
        "value": "{global.size.component.S} + {origin.dimension.50}",
        "type": "sizing",
        "description": "Standard badge max-width"
      }
    }
  }
}