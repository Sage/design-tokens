{
  "actionPopover": {
    "menu": {
      "bg-hover": {
        "value": "{base.color.selectable.minor.default}",
        "type": "color",
        "description": "was action minor 100\n",
        "$extensions": {
          "studio.tokens": {
            "modify": {
              "type": "mix",
              "value": "{base.color.modifiers.menuBg.hover-mix}",
              "space": "lch",
              "color": "{origin.colors.grayProduct.000}"
            }
          }
        }
      },
      "bg-selected": {
        "value": "{base.color.selectable.minor.default}",
        "type": "color",
        "description": "previously action minor 850",
        "$extensions": {
          "studio.tokens": {
            "modify": {
              "type": "mix",
              "value": "{base.color.modifiers.menuBg.active-mix}",
              "space": "lch",
              "color": "{origin.colors.grayProduct.1000}"
            }
          }
        }
      },
      "label-disabled": {
        "value": "{base.color.fg-delicate}",
        "type": "color"
      },
      "label-enabled": {
        "value": "{base.color.selectable.minor.default}",
        "type": "color"
      },
      "label-hover": {
        "value": "{base.color.selectable.minor.default}",
        "type": "color",
        "$extensions": {
          "studio.tokens": {
            "modify": {
              "type": "mix",
              "value": "{base.color.modifiers.button.hover-mix}",
              "space": "lch",
              "color": "{origin.colors.grayProduct.1000}"
            }
          }
        }
      },
      "label-selected": {
        "value": "{base.color.selectable.minor.fg}",
        "type": "color",
        "$extensions": {}
      }
    },
    "trigger": {
      "bg-loading": {
        "value": "{base.color.selectable.minor.default}",
        "type": "color",
        "$extensions": {
          "studio.tokens": {
            "modify": {
              "type": "mix",
              "value": "{base.color.modifiers.button.active-mix}",
              "space": "lch",
              "color": "{origin.colors.grayProduct.1000}"
            }
          }
        }
      },
      "fg-loading": {
        "value": "{base.color.selectable.minor.fg}",
        "type": "color",
        "$extensions": {}
      }
    }
  }
}