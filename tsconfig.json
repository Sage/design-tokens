{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["dist/**/*.js", "**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "target": "ESNext"
  }
}
