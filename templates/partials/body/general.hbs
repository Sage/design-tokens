        <h1 class="hide-on-embedded">
            Sage Design Tokens
        </h1>

        {{#each themes as |categories themeName|}}
            <h2 id="{{themeName}}">
                {{themeName}}
                <a href="#{{themeName}}" title="permalink" class="permalink">ðŸ”—</a>
            </h2>
            {{#each categories as |tokens categoryName|}}
                <section class="my-6">
                    <h3 class="with-icons title is-3 has-text-weight-bold" id="{{themeName}}-{{categoryName}}">
                        {{ categoryName }}
                        <a href="#{{themeName}}-{{categoryName}}" title="permalink" class="permalink">
